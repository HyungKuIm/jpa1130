<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
 http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="hurjae" class="com.oraclejava.springcore.Person" autowire="byName">
		<property name="name" value="허재"/>
		<property name="age" value="60"/>
		<!-- <property name="addr" ref="guroAddress"/> -->
	</bean>
	
	
	<bean id="addr" class="com.oraclejava.springcore.PersonAddress">
		<property name="street" value="코로롱 디지털빌란트 2차 204호 오라클자바교육학원" />
		<property name="city" value="서울시 구로구 디지털로 30길 31" />
	</bean>
	
	<bean id="jejuAddress" class="com.oraclejava.springcore.PersonAddress">
		<property name="street" value="한라산 옆 돌하루방 근처 펜션" />
		<property name="city" value="제주도 제주시 한라산길" />
	</bean>

</beans>